[alias]
  st = status
  ci = commit
  co = checkout
  lg = log --graph --pretty=format:'%Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
